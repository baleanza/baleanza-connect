{
  "version": 2,
  "builds": [
    { "src": "api/*.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/monomarket-offers", "dest": "/api/monomarket-offers.js" },
    { "src": "/api/monomarket-stock", "dest": "/api/monomarket-stock.js" },
    { "src": "/api/murkit-webhook", "dest": "/api/murkit-webhook.js" },
    { "src": "/api/debug-wix", "dest": "/api/debug-wix.js" },
    
    // ЭТО ПРАВИЛО ДОЛЖНО БЫТЬ ПЕРВЫМ
    { "src": "/check", "dest": "/api/check-table.js" },
    
    // А ЭТОТ УНИВЕРСАЛЬНЫЙ ПЕРЕНАПРАВИТЕЛЬ — ПОСЛЕДНИМ
    { "src": "/(.*)", "dest": "/api/monomarket-offers.js" }
  ]
}
